<keymap>
  <global>
    <remote>
      <mypictures>ActivateWindow(Videos, Addons)</mypictures>
      <liveradio>XBMC.ActivateWindow(Videos, TVShowTitles)</liveradio>
      <myvideo>XBMC.ActivateWindow(VideoLibrary, MovieTitles)</myvideo>
      <mymusic>XBMC.ActivateWindow(MusicLibrary, Artists)</mymusic>
      <star>togglefullscreen</star>
      <record>XBMC.ActivateWindow(Favourites)</record>
      <back>Back</back>
      <clear>Close</clear>
      <info>ContextMenu</info>
      <title>ActivateWindow(TVGuide)</title>
    </remote>
 <!--   <universalremote>-->
        <!--<obc2>ActivateWindow(TVChannels)</obc2>-->
    <!--</universalremote>-->
  </global>
  <fullscreenvideo>
      <remote>
          <myvideo>AspectRatio</myvideo>
          <back>smallstepback</back>
          <mymusic>showsubtitles</mymusic>
          <mypictures>Seek(125)</mypictures>
          <liveradio>showtime</liveradio>
          <title>OSD</title>
      </remote>
  </fullscreenvideo>
  <FullscreenLiveTV>
	<remote>
	  <left>StepBack</left>
      <right>StepForward</right>
      <up>BigStepForward</up>
      <down>BigStepBack</down>
	  <myvideo>ActivateWindow(TVRecordings,pvr://recordings/Default) </myvideo>
      <liveradio>showtime</liveradio>
      <title>ActivateWindow(TVGuide)</title>
      <mypictures>Seek(125)</mypictures>
    </remote>
  </FullscreenLiveTV>
  <TVGuide>
    <remote>
       <title>PreviousMenu</title>
       <back>PreviousMenu</back>
       <info>ContextMenu</info>
    </remote>
  </TVGuide>
  <TVTimers>
    <remote>
       <back>PreviousMenu</back>
    </remote>
  </TVTimers>
  <TVRecordings>
    <remote>
       <back>PreviousMenu</back>
    </remote>
  </TVRecordings> 
  <Favourites>
    <remote>
       <record>PreviousMenu</record>
    </remote>
  </Favourites> 
  <VideoOSD>
    <remote>
       <title>PreviousMenu</title>
    </remote>
  </VideoOSD>
</keymap>
